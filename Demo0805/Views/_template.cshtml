<!DOCTYPE html>
@Styles.Render("~/Content/css")
<link href="~/Content/nv.d3.min.css" rel="stylesheet" />
<link href="~/Content/dc.css" rel="stylesheet" />
<script src="~/Scripts/d3/d3.min.js"></script>
<script src="~/Scripts/nv.d3.min.js"></script>
<script src="~/Scripts/respond.min.js"></script>
<script src="~/Scripts/DC/dc.min.js"></script>
<script src="~/Scripts/CrossFilter/crossfilter.min.js"></script>

@using L10N
@{
    ViewBag.lan = @System.Threading.Thread.CurrentThread.CurrentUICulture.ToString();
    ViewBag.url = @Request.Url.OriginalString;//view的網址
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Bookstores/Index">BOB</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse nav-tabs">
                <ul class="nav navbar-nav ">
                    <li class="active"><a href="/Bookstores/Index">@Resource.BookStoresData</a></li>
                    <li class="active"><a href="/Books/Index">@Resource.BooksData</a></li>
                    <li class="active"><a href="/Orders/Index">@Resource.OrdersData</a></li>
                    <li class="active"><a href="/d3js/Index">D3基本圖版</a></li>
                    <li>
                        <div class="btn-group">
                            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                語言選擇 <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">@*@ViewContext.RouteData.Values["controller"].ToString()*@
                                <li>@Html.ActionLink("中文(繁體)", "SetCulture", "Base", new { culture = "zh-TW", url = @ViewBag.url }, null)</li>
                                <li>@Html.ActionLink("英語", "SetCulture", "Base", new { culture = "en-US", url = @ViewBag.url }, null)</li>
                            </ul>
                        </div>
                    </li>
                    <li class="active"> <div style="color:azure">@ViewBag.lan</div></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container">
        <h3>
            <span class="label label-danger">
               @ViewBag.Title                
            </span>
        </h3>
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

